<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout"
	controllerName="com.eramet.maintenanceF5D.controller.Avis" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="{i18n>avisTitle}" showNavButton="true" navButtonPress="backToHome">
				<content>
					<OverflowToolbar class="toolbar">
						<Button icon="sap-icon://home" type="Default" press="backToHome">
							<layoutData>
								<OverflowToolbarLayoutData priority="NeverOverflow"/>
							</layoutData>
						</Button>
			
						<Button type="Default" text="{i18n>avisLinkText}" tooltip="{i18n>avisLinkText}" enabled="false">
							<layoutData>
								<OverflowToolbarLayoutData priority="NeverOverflow"/>
							</layoutData>
						</Button>
					</OverflowToolbar>
					<HBox justifyContent="Center" alignItems="Center">
						<GenericTile id="errorFirst" header="{i18n>avisFirstTile}" press="onPressNavToDetail" class="sapUiSmallMargin">
							<TileContent>
								<ImageContent src="sap-icon://home-share"/>
							</TileContent>
						</GenericTile>
						<GenericTile id="errorSecond" header="{i18n>avisSecondTile}" press="onPressNavToDetail" class="sapUiSmallMargin">
							<TileContent>
								<ImageContent src="sap-icon://home-share"/>
							</TileContent>
						</GenericTile>
					</HBox>	
					<HBox justifyContent="Center" alignItems="Center">	
						<GenericTile id="errorThird" header="{i18n>avisThirdTile}" press="onPressNavToDetail" class="sapUiSmallMargin">
							<TileContent>
								<ImageContent src="sap-icon://home-share"/>
							</TileContent>
						</GenericTile>
						<GenericTile id="errorFourth" header="{i18n>avisFourthTile}" press="onPressNavToDetail" class="sapUiSmallMargin">
							<TileContent>
								<ImageContent src="sap-icon://home-share"/>
							</TileContent>
						</GenericTile>
					</HBox>	
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>