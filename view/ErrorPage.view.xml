<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:l="sap.ui.layout"
	controllerName="com.eramet.maintenanceF5D.controller.ErrorPage" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="{i18n>errorTitle}" showNavButton="true" navButtonPress="backToHome">
				<content>
					<OverflowToolbar class="toolbar">
						<Button icon="sap-icon://home" type="Default" press="backToHome">
							<layoutData>
								<OverflowToolbarLayoutData priority="NeverOverflow"/>
							</layoutData>
						</Button>
						<!--<ToolbarSeparator>-->
						<!--	<layoutData>-->
						<!--		<OverflowToolbarLayoutData priority="NeverOverflow"/>-->
						<!--	</layoutData>-->
						<!--</ToolbarSeparator>	-->
						<Button type="Default" text="{i18n>errorLinkText}" tooltip="{i18n>errorLinkText}" enabled="false">
							<layoutData>
								<OverflowToolbarLayoutData priority="NeverOverflow"/>
							</layoutData>
						</Button>
					</OverflowToolbar>
					<HBox>
						<GenericTile id="errorFirst" header="{i18n>errorFirstTile}" press="onPressNavToDetail" class="sapUiSmallMargin">
							<TileContent>
								<ImageContent src="sap-icon://home-share"/>
							</TileContent>
						</GenericTile>
						<GenericTile id="errorSecond" header="{i18n>errorSecondTile}" press="onPressNavToDetail" class="sapUiSmallMargin">
							<TileContent>
								<ImageContent src="sap-icon://home-share"/>
							</TileContent>
						</GenericTile>
					</HBox>	
					<HBox>	
						<GenericTile id="errorThird" header="{i18n>errorThirdTile}" press="onPressNavToDetail" class="sapUiSmallMargin">
							<TileContent>
								<ImageContent src="sap-icon://home-share"/>
							</TileContent>
						</GenericTile>
						<GenericTile id="errorFourth" header="{i18n>errorFourthTile}" press="onPressNavToDetail" class="sapUiSmallMargin">
							<TileContent>
								<ImageContent src="sap-icon://home-share"/>
							</TileContent>
						</GenericTile>
					</HBox>	
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>