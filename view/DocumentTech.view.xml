<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:f="sap.ui.layout.form" 
	controllerName="com.eramet.maintenanceF5D.controller.DocumentTech" xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="{i18n>documentTechTitle}" showNavButton="true" navButtonPress="onPressNavBack">
				<OverflowToolbar class="toolbar"> 
					<Button icon="sap-icon://home" type="Default" press="backToHome">
						<layoutData>
							<OverflowToolbarLayoutData priority="NeverOverflow"/>
						</layoutData>
					</Button>

					<Button type="Default" text="{i18n>infoEquipmentTitle}" tooltip="{i18n>infoEquipmentTitle}" press="onPressNavBack">
						<layoutData>
							<OverflowToolbarLayoutData priority="NeverOverflow"/>
						</layoutData>
					</Button>	
	
					<Button type="Default" text="{i18n>documentTechTitle}" tooltip="{i18n>documentTechTitle}" enabled="false">
						<layoutData>
							<OverflowToolbarLayoutData priority="NeverOverflow"/>
						</layoutData>
					</Button>	
				</OverflowToolbar>
				<content>
					<Toolbar>
						<SearchField
							id="searchField"
							enableSuggestions="true"
							search="onSearch"
							suggest="onSuggest"
							placeholder="under construction"
							suggestionItems="{ path: 'documentModel>/'}">
							<suggestionItems>
								<SuggestionItem 
									text="{path: 'documentModel>title'}" 
									description="{path: 'documentModel>text'}, {path: 'documentModel>name'}, {path: 'documentModel>type'}, {path: 'documentModel>specialite'}" 
									key="{path: 'documentModel>text'}"/>
							</suggestionItems>
						</SearchField>
					</Toolbar>
					<List
						id="detailList"
						visible="false"
						items="{path: 'documentModel>/'}">
						<items>
							<CustomListItem>
								<HBox>
									<f:SimpleForm columnsL="1" columnsM="1" editable="true" emptySpanL="4" emptySpanM="4"
										labelSpanL="3" labelSpanM="3" layout="ResponsiveGridLayout" maxContainerCols="2">
										<f:content>
											<Label text="{i18n>documentTechText1}"></Label>
											<Input value="{path: 'documentModel>name'}"/>
											
											<Label text="{i18n>documentTechText2}"></Label>
											<Input value="{path: 'documentModel>type'}"/>
											
											<Label text="{i18n>documentTechText3}"></Label>
											<Input value="{path: 'documentModel>specialite'}"/>
										</f:content>
									</f:SimpleForm>	
									<Image src="test-resources/sap/ui/documentation/sdk/images/HT-6100.jpg"
											decorative="false"
											width="170px"
											densityAware="false">
										<detailBox>
											<LightBox>
												<LightBoxItem
														imageSrc="test-resources/sap/ui/documentation/sdk/images/HT-6100-large.jpg"
														alt="{path: 'documentModel>name'}"
														title="{path: 'documentModel>name'}"
														subtitle="{path: 'documentModel>type'}">
												</LightBoxItem>
											</LightBox>
										</detailBox>
										<!-- Fixes Hbox layout on Android Stock Browser for Android 5.0 -->
										<layoutData>
											<FlexItemData growFactor="1" shrinkFactor="0"/>
										</layoutData>
									</Image>
								</HBox>
							</CustomListItem>
						</items>
					</List>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>